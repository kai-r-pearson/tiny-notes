<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Login Example</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Bootstrap 5 CSS (modern version) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../public/stylesheets/style.css">
</head>
<body class="min-vh-100 d-flex align-items-center">
    <div class="container pb-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="wrapper">
                    <div class="text-center mb-4">
                        <h3 class="form-signin-heading">Tiny Notes</h3>
                    </div>
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= error %>
                        </div>
                    <% } %>
                    <form action="/login" method="post" name="Login_Form" class="form-signin">
                        <input type="email" class="form-control mb-3" name="email" placeholder="Email Address" required autofocus />
                        <!-- <input type="password" class="form-control mb-3" name="password" placeholder="Password" required /> -->
                        <button class="btn btn-md btn-primary w-100" name="Submit" value="Login" type="Submit">Login</button>
                        <!-- <a href="/register" class="btn btn-link w-100">Register</a> -->
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>